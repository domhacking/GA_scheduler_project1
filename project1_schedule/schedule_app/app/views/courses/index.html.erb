<h2>GA Course History</h2>

<%= search_form_for @q do |f| %>
   
    <div class= "search_bar">    
        <div class = "search_field">
            <p>
                Course search: <%= f.text_field :name_cont %>
            </p>
        </div>
        
        <div class = "actions_search">
            <%= f.submit %>
        </div>   
            <% end %>
    </div>



<div class = "courses">
<table>
    <tr>
        <td>Name</td>
        <td>Classroom</td>
        <td>Maxsize</td>
        <td>Head Teacher</td>
        <td>Start date</td>
        <td>End date</td>
    </tr>

    <% @courses.each do |course| %>
    <tr>
        <td><%= link_to course.name, course  %></td>
        <td><%= course.classroom_id %></td>
        <td><%= course.maxsize %></td>
        <td><% course.instructors.each do |instructor|%>
            <%= instructor.name %>
            <% end %></td>
        <td><%= course.start_date.strftime("%d %b %Y") %></td>
        <td><%= course.end_date.strftime("%d %b %Y") %></td>
        
      </tr>
    <% end %>
</table>
</div>

<br />

<div class = "actions">
    <%= link_to 'New Course', new_course_path %>
</div>

