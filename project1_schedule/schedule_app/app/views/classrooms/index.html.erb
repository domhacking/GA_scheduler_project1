<h2>Listing classrooms</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Maxpeople</th>
    <th>Course</th>
  </tr>

<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= link_to classroom.name, classroom %></td>
    <td><%= classroom.maxpeople %></td>
    <td><% classroom.courses.each do |course|%>
        <%= course.name %>
        <% end %></td>
    

    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Classroom', new_classroom_path %>
