<!DOCTYPE html>
<html>
<head>
  <title>ScheduleApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
<h1><%=image_tag("General-Assembly-logo.jpg")%>Scheduler</h1>

<% flash.each do |name, msg| %>
    <div class="flash-message flash-message-<%= name %>">
      <%= msg %>
    </div>
  <% end %>
<nav>
<%= link_to "COURSES", courses_path %> 
<%= link_to "CLASSROOMS", classrooms_path %> 
<%= link_to "USERS", users_path %> 
</nav>

  <% if current_user %>
  Hello <%= current_user.email %>
  <%= link_to "Logout", logout_path %>
<%else%>
<%= link_to "Login", new_session_path %> or <%= link_to "Signup", new_user_path %> 
<% end %>
</div>








<%= yield %>

</body>
</html>
