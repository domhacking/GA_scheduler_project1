<!DOCTYPE html>
<html>
<head>
  <title>ScheduleApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="header">
    <%=image_tag("red_logo.png")%>
    <h1>GENERAL ASSEMBLY SCHEDULER</h1>
    <nav>
      <%= link_to "Courses", courses_path %> 
      <%= link_to "Classrooms", classrooms_path %> 
      <%= link_to "Users", users_path %> 
      <%= link_to "Calendar", calendar_path %> 
      </nav>
      <div class="login"> 
      <% if current_user %>
        <%= current_user.name%>
        <%= link_to "Logout", logout_path %>
      <%else%>
        <%= link_to "Login", new_session_path %> or <%= link_to "Signup", new_user_path %>
      <% end %>
      </div>
    
  </header>
    
  <%#= applications.time %>

   <% flash.each do |name, msg| %>
      <div class="flash-message flash-message-<%= name %>">
        <%= msg %>
      </div>
    <% end %>

  <div class="main">  
  <%= yield %>
  </div>

</body>
</html>
